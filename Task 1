    <script>
        // Simple countdown timer
        function updateCountdown() {
            const countdownElements = document.querySelectorAll('.countdown-number');
            // This is a simple demo - in production you'd calculate actual time differences
            let days = 4, hours = 13, mins = 34, secs = 56;
            
            setInterval(() => {
                secs--;
                if (secs < 0) {
                    secs = 59;
                    mins--;
                }
                if (mins < 0) {
                    mins = 59;
                    hours--;
                }
                if (hours < 0) {
                    hours = 23;
                    days--;
                }
                
                if (countdownElements.length >= 4) {
                    countdownElements[0].textContent = String(days).padStart(2, '0');
                    countdownElements[1].textContent = String(hours).padStart(2, '0');
                    countdownElements[2].textContent = String(mins).padStart(2, '0');
                    countdownElements[3].textContent = String(secs).padStart(2, '0');
                }
            }, 1000);
        }
        
        updateCountdown();
    </script>

